<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <link href="${pageContext.request.contextPath}/assets/css/periodModal.css" rel="stylesheet" >
	
    <title>Document</title>
</head>

<body>
<!--  시터가 보게 되는 모달창 -->
    <div class="main">
        <hr>
      <div style="text-align: center;
    background-color: #ffb61a9e;
    height: 41px;
    padding: 11px;
    line-height: 2.3;
    padding-bottom: 19px;
    color: white;
    font-size: 19px;"> <h3 style="display: inline;">활동 기간/시간 입력</h3></div> 
   
     <br>
      <h4 style="display: inline-block; width: 150px;">활동 시작일</h4>
        
       <div class="input_date_box" style="display: inline-block;">
        <input name="startDate" id="startDate" type="date" placeholder="날짜를 입력해주세요">
     
      </div>
  
        <hr>
        
			<div class="mon_wrap"> 
				<p>활동요일</p>
				<div class="day_wrap">
					<div  class="mon1">
						<label>월</label>
						<input type="checkbox" id="P_mon" name="P_mon" value="P_mon">
					</div>
					<div  class="mon2">
						<label>화</label>
						<input type="checkbox" id="P_tue" name="P_tue" value="P_tue">
					</div>
					<div class="mon3">
						<label>수</label>
						<input type="checkbox" id="P_wed" name="P_wed" value="P_wed">
					</div>
					<div  class="mon4">
						<label>목</label>
						<input type="checkbox" id="P_thu" name="P_thu" value="P_thu">
					</div>
					<div  class="mon5">
						<label>금</label>
						<input type="checkbox" id="P_fri" name="P_fri" value="P_fri">
					</div>
					<div  class="mon6">
						<label>토</label>
						<input type="checkbox" id="P_sat" name="P_sat" value="P_sat">
					</div>
					<div class="mon7">
						<label>일</label>
						<input type="checkbox" id="P_sun" name="P_sun" value="P_sun">
					</div>
					</div>
				</div>

        <hr>
		<div>
			<p>활동 시간</p>
			<div class="time_wrap">
					<div class="morning">
						<input type="checkbox" id="P_morning" name="P_morning" value="P_morning">
						<label>09:00~12:00</label>
					</div>
					<div class="lunch">
						<input type="checkbox" id="P_lunch" name="P_lunch" value="P_lunch">
						<label>12:00~15:00</label>
					</div>
					<div class="noon">
						<input type="checkbox" id="P_noon" name="P_noon" value="P_noon">
						<label>15:00~18:00</label>
					</div>
			</div>
		</div>
		<hr>

	<div>
        <p>활동 가능 기간 </p>
        	<div class="week">
				<input type="checkbox" id="P_week" name="P_week" value="P_week">
				<label>1주일 이상</label>
			</div>
        	<div class="month">
				<input type="checkbox" id="P_month" name="P_month" value="P_month">
				<label>1개월 이상</label>
			</div>
        	<div class="quarter">
				<input type="checkbox" id="P_quarter" name="P_quarter" value="P_quarter">
				<label>3개월 이상</label>
			</div>
        	<div class="semiAnnual">
				<input type="checkbox" id="P_semiAnnual" name="P_semiAnnual" value="P_semiAnnual">
				<label>6개월 이상</label>
			</div>
			
        <button id="iframeBtn" style="background-color: #ffb61a; color: white; font-weight: bold; font-size: 20px;
            width: 300px; height: 50px; border: none; margin-top: 35px; border-radius: 25px;
            cursor: pointer;
        ">완료</button>
	</div>
	
    </div>

</body>
<script src="${pageContext.request.contextPath}/assets/js/periodModal.js"></script>
</html>